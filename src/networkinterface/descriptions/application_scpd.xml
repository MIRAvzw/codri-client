<?xml version="1.0"?>
 <scpd xmlns="urn:schemas-upnp-org:service-1-0">
	 <specVersion>
		 <major>1</major>
		 <minor>0</minor>
	 </specVersion>
	 <actionList>
		  <action>
			  <name>SetMediaLocation</name>
			  <argumentList>
				  <argument>
					  <name>iMediaLocationValue</name>
					  <relatedStateVariable>MediaLocation</relatedStateVariable>
					  <direction>in</direction>
				  </argument>
			  </argumentList>
		  </action>
		  <action>
		  	<name>LoadMedia</name>
		  </action>
		  <action>
		  	<name>GetMediaRevision</name>
			 <argumentList>
				 <argument>
					 <name>oMediaRevisionValue</name>
					 <relatedStateVariable>MediaRevision</relatedStateVariable>
					 <direction>out</direction>
				 </argument>
			 </argumentList>
		  </action>
          <action>
             <name>SetVolume</name>
             <argumentList>
                 <argument>
                     <name>iVolumeValue</name>
                     <relatedStateVariable>Volume</relatedStateVariable>
                     <direction>in</direction>
                 </argument>
             </argumentList>
          </action>
          <action>
              <name>GetVolume</name>
              <argumentList>
                  <argument>
                      <name>oVolumeValue</name>
                      <relatedStateVariable>Volume</relatedStateVariable>
                      <direction>out</direction>
                  </argument>
              </argumentList>
          </action>
	  </actionList>
	  <serviceStateTable>
		  <stateVariable sendEvents="no">
			  <name>MediaLocation</name>
			  <dataType>string</dataType>
			  <defaultValue></defaultValue>
		  </stateVariable>
		  <stateVariable sendEvents="yes">
			  <name>MediaRevision</name>
			  <dataType>ui4</dataType>
			  <defaultValue>0</defaultValue>
		  </stateVariable>
          <stateVariable sendEvents="no">
              <name>Volume</name>
              <dataType>boolean</dataType>
              <defaultValue>0</defaultValue>
          </stateVariable>
	  </serviceStateTable>
 </scpd>
